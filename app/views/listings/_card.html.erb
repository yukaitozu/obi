<div class="index-card">
  <div class="index-card-pic">
    <% if listing.photo.attached? %>
      <%= cl_image_tag listing.photo.key, height: 250, width: 300, crop: :fill %>
    <% else %>
      <%= image_tag "orange-hakama.jpg"%>
    <% end %>
  </div>
  <div class="index-card-info">
    <div>
      <p><%= link_to listing.title, listing_path(listing)%></p>
      <p>Â¥<%= listing.price %> <em>per day</em></p>
      <div class="index-card-avatar">
        <%= link_to user_path(listing)  do %>
        <% if  listing.user.photo.attached? %>
          <%#= cl_image_tag current_user.photo.key, height: 150, width: 150, crop: :fill %>
          <%= cl_image_tag listing.user.photo.key, height: 150, width: 150, crop: :fill %>
          <% else %>
          <%= image_tag 'blank_avatar.png' %>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
